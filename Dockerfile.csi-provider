FROM golang:1.25-alpine AS build
WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o /out/csi-provider ./cmd/csi-provider

FROM gcr.io/distroless/base-debian12
COPY --from=build /out/csi-provider /csi-provider
USER nonroot:nonroot
ENTRYPOINT ["/csi-provider"]
